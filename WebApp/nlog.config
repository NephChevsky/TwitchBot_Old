<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  autoReload="true"
	  internalLogLevel="Off">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<variable name="appName" value="WebApp"/>
	<variable name="logPath" value="c:\logs"/>
	<!-- the targets to write to -->
	<targets>
		<!-- Logs for local debug -->
		<target type="AsyncWrapper" name="asyncLogsFile">
			<target type="File" name="logsFile" fileName="${logPath}\current.txt"
					layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=type,message}"
					archiveFileName="${logPath}\${shortdate}.log"
					archiveNumbering="DateAndSequence"
					archiveEvery="Day"
					archiveDateFormat="yyyy-MM-dd"
					archiveOldFileOnStartup="false"
					maxArchiveFiles="5"/>
		</target>

		<target type="AsyncWrapper" name="asyncExceptionsFile">
			<target type="File" name="exceptionsFile" fileName="${logPath}\exceptions\${longdate}.txt"
					layout="========== Exception stack trace ==========${newline}${exception:format=tostring}${newline}${newline}========== Application ==========${newline}AppBasePath: ${aspnet-appbasepath}${newline}Application: ${aspnet-application}${newline}Environment: ${aspnet-environment}${newline}WebRootPath: ${aspnet-webrootpath}${newline}IISSiteName: ${iis-site-name}${newline}${newline}========== Request details ==========${newline}Item: ${aspnet-item}${newline}MvcAction: ${aspnet-mvc-action}${newline}MvcController: ${aspnet-mvc-controller}${newline}Request: ${aspnet-request}${newline}RequestContentType: ${aspnet-request-contenttype}${newline}RequestCookie: ${aspnet-request-cookie}${newline}RequestForm: ${aspnet-request-form}${newline}RequestHeaders: ${aspnet-request-headers}${newline}RequestHost: ${aspnet-request-host}${newline}RequestIP: ${aspnet-request-ip}${newline}RequestMethod: ${aspnet-request-method}${newline}RequestPostedBody: ${aspnet-request-posted-body}${newline}RequestQueryString: ${aspnet-request-querystring}${newline}RequestReferrer: ${aspnet-request-referrer}${newline}RequestUrl: ${aspnet-request-url}${newline}RequestUserAgent: ${aspnet-request-useragent}${newline}ResponseStatusCode: ${aspnet-response-statuscode}${newline}${newline}========== Session ==========${newline}Session: ${aspnet-session}${newline}SessionId: ${aspnet-sessionid}${newline}AuthType: ${aspnet-user-authtype}${newline}Identity: ${aspnet-user-identity}${newline}IsAuthenticated: ${aspnet-user-isauthenticated}${newline}${newline}========== EOD Sprint ==========${newline}CommonLastSprint: ${gdc:item=CommonLastSprint}${newline}ASLastSprint: ${gdc:item=ASLastSprint}${newline}RSLastSprint: ${gdc:item=RSLastSprint}${newline}${newline}========== Misc ==========${newline}TraceIdentifier: ${aspnet-traceidentifier}${newline}"
					maxArchiveFiles="20" />
		</target>

	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!-- Logs start/stop of the application -->
		<logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="asyncLogsFile" />

		<!-- Logs for local debug -->
		<logger name="WebApp.*" minlevel="Info" writeTo="asyncLogsFile" />
		<logger name="*" minlevel="Warn" writeTo="asyncLogsFile" />

		<!-- exceptions details are logged in individual files -->
		<logger name="*" minlevel="Warn" writeTo="asyncExceptionsFile" final="true">
			<filters defaultAction='Log'>
				<when condition="length('${exception}') = 0" action="Ignore" />
			</filters>
		</logger>

	</rules>
</nlog>